{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile, storing personal information and preferences.",
      "properties": {
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "country": {
          "type": "string",
          "description": "User's country of residence."
        },
        "state": {
          "type": "string",
          "description": "User's state of residence."
        },
        "financialGoal": {
          "type": "string",
          "description": "The users stated financial goals."
        }
      },
      "required": [
        "name",
        "email"
      ]
    },
    "Deal": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Deal",
      "type": "object",
      "description": "Represents a saved deal analyzed by the user, storing financial metrics and details.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user who owns this deal."
        },
        "dealType": {
          "type": "string",
          "enum": ["Rental Property", "House Flip", "Commercial Multifamily"]
        },
        "dealName": {
          "type": "string"
        },
        "purchasePrice": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "marketConditions": {
            "type": "string"
        },
        "downPayment": {
            "type": "number"
        },
        "interestRate": {
            "type": "number"
        },
        "loanTerm": {
            "type": "number"
        },
        "monthlyIncome": {
            "type": "number"
        },
        "monthlyExpenses": {
            "type": "number"
        },
        "monthlyCashFlow": {
          "type": "number"
        },
        "cocReturn": {
          "type": "number"
        },
        "arv": {
          "type": "number"
        },
        "rehabCost": {
          "type": "number"
        },
        "holdingCosts": {
            "type": "number"
        },
        "sellingCosts": {
            "type": "number"
        },
        "netProfit": {
            "type": "number"
        },
        "roi": {
            "type": "number"
        },
        "noi": {
            "type": "number"
        },
        "capRate": {
            "type": "number"
        },
        "status": {
            "type": "string",
            "enum": ["In Works", "Negotiating", "Bought", "Owned & Operating", "Sold"]
        },
        "isPublished": {
            "type": "boolean"
        },
        "investorNotes": {
            "type": "string"
        }
      },
      "required": [
        "userId",
        "dealType",
        "dealName",
        "purchasePrice",
        "createdAt",
        "status",
        "isPublished"
      ]
    },
    "DealComment": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "DealComment",
        "type": "object",
        "description": "A comment on a specific deal.",
        "properties": {
            "author": {
                "type": "string",
                "description": "Name of the person who wrote the comment."
            },
            "text": {
                "type": "string",
                "description": "The content of the comment."
            },
            "createdAt": {
                "type": "string",
                "format": "date-time",
                "description": "Timestamp of when the comment was created."
            }
        },
        "required": ["author", "text", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information. This collection uses the user's UID as the document ID, ensuring that only the authenticated user can access their own profile data."
    },
    "/users/{userId}/deals/{dealId}": {
      "schema": {
        "$ref": "#/entities/Deal"
      },
      "description": "Stores deals associated with a specific user. This is a subcollection of the user's profile."
    },
    "/users/{userId}/deals/{dealId}/comments/{commentId}": {
        "schema": {
            "$ref": "#/entities/DealComment"
        },
        "description": "Stores comments for a specific deal."
    }
  }
}
