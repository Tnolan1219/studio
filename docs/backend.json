
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile in the TKN Fi RE application.",
      "properties": {
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        },
        "country": {
          "type": "string",
          "description": "User's country of residence."
        },
        "state": {
          "type": "string",
          "description": "User's state of residence."
        },
        "experience": {
          "type": "string",
          "description": "User's real estate investment experience level."
        },
        "financialGoal": {
          "type": "string",
          "description": "User's primary financial goal."
        },
        "isOnboardingComplete": {
            "type": "boolean",
            "description": "Flag to indicate if the user has completed the onboarding process."
        },
        "plan": {
          "type": "string",
          "description": "The user's subscription plan.",
          "enum": ["Free", "Pro", "Executive"]
        }
      },
      "required": [
        "email"
      ]
    },
    "Deal": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Deal",
      "type": "object",
      "description": "Represents a saved real estate deal analyzed by a user.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user who owns this deal."
        },
        "dealName": {
          "type": "string",
          "description": "Name of the deal."
        },
        "dealType": {
          "type": "string",
          "description": "Type of property (Rental Property, House Flip, Commercial Multifamily)."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the deal was created."
        },
        "purchasePrice": { "type": "number" },
        "closingCosts": { "type": "number" },
        "rehabCost": { "type": "number" },
        "arv": { "type": "number" },
        "downPayment": { "type": "number" },
        "loanTerm": { "type": "number" },
        "interestRate": { "type": "number" },
        "grossMonthlyIncome": { "type": "number" },
        "propertyTaxes": { "type": "number" },
        "insurance": { "type": "number" },
        "repairsAndMaintenance": { "type": "number" },
        "vacancy": { "type": "number" },
        "capitalExpenditures": { "type": "number" },
        "managementFee": { "type": "number" },
        "otherExpenses": { "type": "number" },
        "annualIncomeGrowth": { "type": "number" },
        "annualExpenseGrowth": { "type": "number" },
        "annualAppreciation": { "type": "number" },
        "holdingLength": { "type": "number" },
        "sellingCosts": { "type": "number" },
        "monthlyCashFlow": { "type": "number" },
        "cocReturn": { "type": "number" },
        "noi": { "type": "number" },
        "capRate": { "type": "number" },
        "roi": { "type": "number" },
        "netProfit": { "type": "number" },
        "marketConditions": { "type": "string" },
        "status": { "type": "string" },
        "isPublished": { "type": "boolean" },
        "investorNotes": { "type": "string" },
        "isAdvanced": { "type": "boolean" },
        "unitMix": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {"type": "string"},
                    "count": {"type": "number"},
                    "rent": {"type": "number"}
                }
            }
        },
        "otherIncomes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {"type": "string"},
                    "amount": {"type": "number"}
                }
            }
        },
        "operatingExpenses": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {"type": "string"},
                    "amount": {"type": "number"}
                }
            }
        }
      },
      "required": [
        "userId",
        "dealName",
        "dealType",
        "purchasePrice",
        "createdAt"
      ]
    },
    "DealComment": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "DealComment",
        "type": "object",
        "description": "A comment on a specific deal.",
        "properties": {
            "text": {
                "type": "string"
            },
            "author": {
                "type": "string"
            },
            "createdAt": {
                "type": "string",
                "format": "date-time"
            }
        },
        "required": ["text", "author", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/deals/{dealId}": {
      "schema": { "$ref": "#/entities/Deal" },
      "description": "Subcollection for storing a user's saved deals."
    },
    "/users/{userId}/deals/{dealId}/comments/{commentId}": {
        "schema": { "$ref": "#/entities/DealComment" },
        "description": "Subcollection for storing comments on a specific deal."
    }
  }
}
