
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write to their own user document and all subcollections.
    // This provides full ownership of private deals and comments.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Published deals are readable by any authenticated user.
    match /publishedDeals/{dealId} {
      allow get, list: if request.auth != null;

      // Only the owner of the deal can create, update, or delete it.
      // The `isPublished` flag must be true to prevent private deals from being copied here.
      allow create: if request.auth.uid == request.resource.data.userId && request.resource.data.isPublished == true;
      allow update: if request.auth.uid == resource.data.userId && request.resource.data.isPublished == true;
      allow delete: if request.auth.uid == resource.data.userId;

      // Comments on public deals can be read, created, updated, or deleted by authenticated users.
      // Updates and deletes are restricted to the comment's author.
      match /comments/{commentId} {
        allow read, list, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      }
    }
  }
}
