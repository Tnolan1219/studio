/**
 * @fileoverview Firestore Security Rules for TKN Fi RE application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data while providing a public space for shared deals.  User data and private deals are accessible only to the owning user. Public deals are copied to a top-level collection for community access.
 *
 * Data Structure:
 * - /users/{userId}: User profile data, accessible only to the user.
 * - /users/{userId}/deals/{dealId}: Private deal data, accessible only to the user.
 * - /publishedDeals/{dealId}: Publicly shared deals, readable by all authenticated users, writable only by the owner.
 *
 * Key Security Decisions:
 * - User listing is disabled.
 * - Public deals are denormalized (copied) to the /publishedDeals collection for efficient public reads.
 * - Data validation is limited to ownership checks and relationship integrity.
 *
 * Denormalization for Authorization:
 * Deals intended for the community are copied to the `publishedDeals` collection, along with the `authorName`. This avoids complex queries and allows public read access.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects user profile data.
     * @path /users/{userId}
     * @allow (read, write) if the user is the owner of the profile (userId matches auth.uid).
     * @deny (read, write) if the user is not the owner of the profile.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Disable user listing.

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource.data.id == userId; //Enforce ownership immutability
      allow delete: if isOwner(userId);
    }

    /**
     * @description Protects deals associated with a specific user.
     * @path /users/{userId}/deals/{dealId}
     * @allow (read, write) if the user is the owner of the deal (userId matches auth.uid).
     * @deny (read, write) if the user is not the owner of the deal.
     * @principle Enforces document ownership for all operations within a user's data tree.
     */
    match /users/{userId}/deals/{dealId} {
        function isOwner(userId) {
            return request.auth != null && request.auth.uid == userId;
        }

        function isExistingOwner(userId) {
            return isOwner(userId) && resource != null;
        }

        allow get: if isOwner(userId);
        allow list: if isOwner(userId);

        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == userId; // Enforce ownership immutability
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages publicly shared deals.
     * @path /publishedDeals/{dealId}
     * @allow (read) to all authenticated users.
     * @allow (create) to users who are creating a deal with their own userId.
     * @allow (update, delete) to the owner of the deal.
     * @deny (create, update, delete) to non-owners.
     * @principle Allows public read access to published deals while restricting write access to the owner.
     */
    match /publishedDeals/{dealId} {
        function isSignedIn() {
            return request.auth != null;
        }

        function isOwner(authorId) {
          return request.auth != null && request.auth.uid == authorId;
        }

        function isExistingOwner(authorId) {
            return isOwner(authorId) && resource != null;
        }

        allow get, list: if isSignedIn();

        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid && request.resource.data.isPublished == true;
        allow update: if isExistingOwner(resource.data.userId) && request.resource.data.isPublished == true;
        allow delete: if isExistingOwner(resource.data.userId);
    }
  }
}